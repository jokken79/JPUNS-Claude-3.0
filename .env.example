# ===========================================
# UNS-ClaudeJP 3.0 - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# IMPORTANT: These credentials MUST match across all services
POSTGRES_DB=uns_claudejp
POSTGRES_USER=uns_admin
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Database URL (use 'db' as host inside Docker, 'localhost' for local development)
DATABASE_URL=postgresql://uns_admin:YOUR_SECURE_PASSWORD_HERE@db:5432/uns_claudejp

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# IMPORTANT: Change these in production!
# Generate a strong secret key with: openssl rand -hex 32
SECRET_KEY=YOUR_VERY_LONG_RANDOM_SECRET_KEY_HERE_CHANGE_THIS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# DEVELOPMENT CREDENTIALS
# ============================================
# For development/testing only - REMOVE IN PRODUCTION
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@uns-kikaku.com

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=UNS-ClaudeJP
APP_VERSION=3.0
ENVIRONMENT=development
DEBUG=true
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ============================================
# FRONTEND VARIABLES (Vite)
# ============================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=UNS-ClaudeJP 3.1
VITE_APP_COMPANY=UNS企画
VITE_APP_LANGUAGE=ja

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# FILE UPLOAD
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls
UPLOAD_DIR=/app/uploads

# ============================================
# OCR SERVICES
# ============================================
OCR_ENABLED=true
TESSERACT_LANG=jpn+eng

# Azure Computer Vision (Optional - Primary OCR)
# Get your keys from: https://portal.azure.com
AZURE_COMPUTER_VISION_ENDPOINT=https://YOUR_ENDPOINT.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=YOUR_AZURE_KEY_HERE
AZURE_COMPUTER_VISION_API_VERSION=2023-02-01-preview

# Google Cloud Vision (Optional - Alternative OCR)
GOOGLE_CLOUD_VISION_ENABLED=false
GOOGLE_CLOUD_VISION_API_KEY=YOUR_GOOGLE_CLOUD_KEY_HERE

# Gemini API (Optional - AI Features)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ============================================
# EMAIL/SMTP NOTIFICATIONS
# ============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM=noreply@uns-kikaku.com

# ============================================
# NOTIFICATIONS
# ============================================
# LINE Notify (Optional)
LINE_NOTIFY_TOKEN=YOUR_LINE_NOTIFY_TOKEN_HERE

# WhatsApp (Optional)
WHATSAPP_ENABLED=false
WHATSAPP_TOKEN=YOUR_WHATSAPP_TOKEN
WHATSAPP_PHONE_ID=YOUR_PHONE_ID

# ============================================
# RATE LIMITING (Optional)
# ============================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# ============================================
# SENTRY (Optional - Error Tracking)
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# REPORTS CONFIGURATION
# ============================================
REPORTS_DIR=/app/reports
REPORTS_LOGO_PATH=/app/config/logo.png

# ============================================
# COMPANY INFORMATION
# ============================================
COMPANY_NAME=UNS-Kikaku
COMPANY_WEBSITE=https://uns-kikaku.com
COMPANY_EMAIL=info@uns-kikaku.com
COMPANY_PHONE=+81-XX-XXXX-XXXX

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/uns-claudejp.log

# ============================================
# DEVELOPMENT / PRODUCTION
# ============================================
ENVIRONMENT=development
DEBUG=true
